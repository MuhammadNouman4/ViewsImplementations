<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".ImageviewImplem">

<ImageView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
android:src="@drawable/ppring"
    android:layout_marginTop="40dp"
    android:id="@+id/image"
    android:layout_marginBottom="80dp"
    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/image"
        android:id="@+id/ll"
        android:layout_margin="6dp"
        android:weightSum="2"
          >
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="CENTER"
            android:id="@+id/CENTER"
            android:textColor="#fff"
            android:textSize="20dp"
            android:textStyle="bold"
            android:background="#98D399"
            android:layout_margin="5dp"
            android:layout_weight="1"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="CENTER CROP"
            android:id="@+id/CENTERCROP"
            android:textColor="#fff"
            android:layout_margin="5dp"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:background="#98D399"
            />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/ll"
        android:id="@+id/ll1"
        android:layout_margin="6dp"
        android:weightSum="2"
        >
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="CENTER INSIDE"
            android:id="@+id/CENTERINSIDE"
            android:textColor="#fff"
            android:textSize="20dp"
            android:textStyle="bold"
            android:background="#98D399"
            android:layout_margin="5dp"
            android:layout_weight="1"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="FIT CENTER"
            android:id="@+id/FITCENTER"
            android:textColor="#fff"
            android:layout_margin="5dp"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:background="#98D399"
            />



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/ll1"
        android:id="@+id/ll2"
        android:layout_margin="6dp"
        android:weightSum="2"
        >
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="FIT END"
            android:id="@+id/FITEND"
            android:textColor="#fff"
            android:textSize="20dp"
            android:textStyle="bold"
            android:background="#98D399"
            android:layout_margin="5dp"
            android:layout_weight="1"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="FIT START"
            android:id="@+id/FITSTART"
            android:textColor="#fff"
            android:layout_margin="5dp"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:background="#98D399"
            />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/ll2"
        android:id="@+id/ll3"
        android:layout_margin="6dp"
        android:weightSum="2"
        >
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="FIT XY"
            android:id="@+id/FITXY"
            android:textColor="#fff"
            android:textSize="20dp"
            android:textStyle="bold"
            android:background="#98D399"
            android:layout_margin="5dp"
            android:layout_weight="1"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="MATRIX"
            android:id="@+id/MATRIX"
            android:textColor="#fff"
            android:layout_margin="5dp"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:background="#98D399"
            />

    </LinearLayout>
</RelativeLayout>
